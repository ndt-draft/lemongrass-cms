<h1>Users</h1>

<a href="/users/new" class="btn btn-primary btn-md">New</a>

<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Description</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    {{#each users}}
      <tr>
        <td>{{this.id}}</td>
        <td>{{this.name}}</td>
        <td>{{this.description}}</td>
        <td>
          <a class="btn btn-secondary btn-sm" href="/users/{{this.id}}/edit">Edit</a>
          <a class="btn btn-danger btn-sm" href="/users/{{this.id}}/delete">Delete</a>
        </td>
      </tr>
    {{/each}}
    </tbody>
  </table>
</div>